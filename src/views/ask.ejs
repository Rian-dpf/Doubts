<%- include ("partials/header.ejs") %>
<body>
  <%- include ("partials/navbar.ejs") %>

  <div class="container">
    <!--FORMULÁRIO DE PERGUNTA-->
    <div class="card" id="form-pergunta">
      <div class="card-header"><h3>Fazer uma pergunta</h3></div>
      <div class="card-body">
        <form action="/savequestion" method="POST">
          <label>Título</label>
          <input
            class="form-control"
            type="text"
            name="title"
            placeholder="Título"
          /><br />
          <label>Descrição</label>
          <textarea
            class="form-control"
            name="description"
            placeholder="Descreva sua pergunta aqui.."
          ></textarea>

          <button type="submit" class="btn btn-primary mt-3">Enviar</button>
        </form>
      </div>
    </div>
  </div>
</body>
